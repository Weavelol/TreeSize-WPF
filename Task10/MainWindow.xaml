<Window x:Class="Task10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task10" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Analyze" Margin="5" Command="{Binding AnalyzeFolderCommand}"/>
            <Button Content="Select Folder" Margin="5" Command="{Binding SelectFolderCommand}"/>
            <TextBlock Margin="5" Text="{Binding SelectedFolderPath, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <TreeView Grid.Row="1" ItemsSource="{Binding Records}">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock/>
                        <TextBlock/>
                        <TextBlock/>
                    </StackPanel>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
